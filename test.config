{
    "output": "HDMI-A-1",
    "layer": "top", // Waybar at top layer
    "height": 16,
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "wlr/taskbar"
    ],
    "modules-center": [],
    "modules-right": [
        "idle_inhibitor",
        "gammastep",
        "gamemode",
        "pulseaudio",
        "network",
        "cpu",
        "temperature",
        "memory",
        "clock",
        "tray"
    ],
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "wlr/taskbar": {
        "all-outputs": true,
        "format": "{icon}",
        "icon-size": 16,
        "icon-theme": "hicolor",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
        // "ignore-list": [
        //     "Alacritty"
        // ]
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "gammastep": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },
        "interval": 5
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "timezones": ["America/Los_Angeles"],
        "format": "{:%m/%d %I:%M %p}  ",
        "format-alt": "{:%a %Y-%m-%d %I:%M %p}  ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "on-scroll": -1,
            "on-click-right": "mode",
            "mode-mon-col": 3,
            "format": {
                "months": "<span size='large' weight='normal' face='Verdana'>{}</span>",
                "weekdays": "<span color='#003399'>{}</span>",
                "today": "<span color='red'><b>{}</b></span>",
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "format": "{usage}% ",
        "format-alt": "{avg_frequency}/{max_frequency} {usage}% ",
        "interval": 10,
        "tooltip": true
    },
    "temperature": {
        // "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""],
        "tooltip-format": "{name}: {temperatureC}°C",
    },
    "memory": {
        "format": "{}% "
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "interval": 5,
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-ethernet": "{ipaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {bandwidthUpBits}▲ {bandwidthDownBits}▼",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}, {bandwidthUpBits}▲ {bandwidthDownBits}▼"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", ""]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
    },
    "gamemode": {
        "format": "{glyph}",
        "format-alt": "{glyph} {count}",
        "hide-not-running": true,
        "use-icon": true,
        "icon-name": "input-gaming-symbolic",
        "icon-spacing": 4,
        "icon-size": 16,
        "tooltip": true,
        "tooltip-format": "Games running: {count}"
    }
}
