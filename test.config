{
    "output": "HDMI-A-1",
    "layer": "top", // Waybar at top layer
    "height": 16,
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "wlr/taskbar"
    ],
    "modules-center": [
        "mpris"
    ],
    "modules-right": [
        "idle_inhibitor",
        "gamemode",
        "ddcutil",
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "temperature",
        "memory",
        "upower",
        "systemd-failed-units",
        "clock",
        "tray"
    ],
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "wlr/taskbar": {
        "all-outputs": true,
        "format": "{icon}",
        "icon-size": 16,
        "icon-theme": "hicolor",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
        // "ignore-list": [
        //     "Alacritty"
        // ]
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "gammastep": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÜÜ",
            "deactivated": "ÔÜÖ"
        },
        "interval": 5
    },
    "ddcutil": {
        "format": "{status} üíª",
        "bus": 9,
        "interval": 5,
        "input-names": {
             "0x0F": "DP2",
             "0x10": "DP1",
             "0x11": "HDMI1",
             "0x12": "HDMI2",
        },
        "primary-input": "DP1",
        "secondary-input": "DP2"
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "timezones": ["America/Los_Angeles"],
        "format": "{:%m/%d %I:%M %p} ÔÄó ",
        "format-alt": "{:%a %Y-%m-%d %I:%M %p} ÔÄó ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "on-scroll": -1,
            "on-click-right": "mode",
            "mode-mon-col": 3,
            "format": {
                "months": "<span size='large' weight='normal' face='Verdana'>{}</span>",
                "weekdays": "<span color='#003399'>{}</span>",
                "today": "<span color='red'><b>{}</b></span>",
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "format-alt": "{avg_frequency}/{max_frequency} {usage}% Ôãõ",
        "interval": 10,
        "tooltip": true
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        // "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "tooltip-format": "{name}: {temperatureC}¬∞C",
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "interval": 5,
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {bandwidthUpBits}‚ñ≤ {bandwidthDownBits}‚ñº",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}, {bandwidthUpBits}‚ñ≤ {bandwidthDownBits}‚ñº"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
    },
    "upower": {
        "native-path": "/sys/devices/pci0000:00/0000:00:08.1/0000:7f:00.4/usb7/7-2/7-2:1.0/usbmisc/hiddev2",
        "icon-size": 16,
        "format": "{percentage}",
        "hide-if-empty": true,
        "tooltip": true,
        "tooltip-spacing": 4,
        "tooltip-format": "{model}: {percentage}, {time}",
    },
    "systemd-failed-units": {
        "hide-on-ok": true,
        "format": "‚úò {nr_failed}",
        "format-ok": "‚úî",
        "system": true,
        "user": true,
    },
    "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "max-length": 40,
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "tooltip": true,
        "tooltip-format": "{player} ({status}): {dynamic}",
        "album-len": 0,
        "interval": 0
    },
    "gamemode": {
        "format": "{glyph}",
        "format-alt": "{glyph} {count}",
        "hide-not-running": true,
        "use-icon": true,
        "icon-name": "input-gaming-symbolic",
        "icon-spacing": 4,
        "icon-size": 16,
        "tooltip": true,
        "tooltip-format": "Games running: {count}"
    }
}
